    "version": "0.2.0",
    "configurations": [
        {
          "type": "node",
          "request": "launch",
          "name": "TSLint",
          "program": "${workspaceFolder}/node_modules/tslint/bin/tslint",
          "args": [
              "--test",
              "${workspaceFolder}/fixtures/**/tslint.json",
